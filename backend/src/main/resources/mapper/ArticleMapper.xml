<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.asilentboy.blog.mapper.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.asilentboy.blog.pojo.Article">
        <id column="id" property="id" />
        <result column="cid" property="cid" />
        <result column="banner" property="banner" />
        <result column="isTop" property="isTop" />
        <result column="pubTime" property="pubTime" />
        <result column="title" property="title" />
        <result column="summary" property="summary" />
        <result column="content" property="content" />
        <result column="viewsCount" property="viewsCount" />
        <result column="commentsCount" property="commentsCount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, cid, banner, isTop, pubTime, title, summary, content, viewsCount, commentsCount
    </sql>

</mapper>
